        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".SingUp" />
        <activity android:name=".Loading_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu_Updates"
            android:label="@string/title_activity_menu__updates"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RSSdetail"
            android:label="@string/title_activity_rssdetail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BrowserWWW" />
        <activity android:name=".Fragments.MemberDetail" />
        <activity android:name=".Forum_add" />
        <activity android:name=".Forum_post_detail" />
